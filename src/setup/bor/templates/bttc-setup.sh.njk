#!/usr/bin/env sh

set -x #echo on

BUILD_DIR={{ obj.buildDir }}/bin
DATA_DIR={{ obj.config.dataDir }}
BTTC_DATA_DIR={{ obj.borDataDir }}
GENESIS_PATH={{ obj.genesis.borGenesisFilePath }}

# create bor, logs and keystore directory
mkdir -p $DATA_DIR/logs

# init bor
$BUILD_DIR/bor --datadir $BTTC_DATA_DIR init $GENESIS_PATH

echo "Setup done!"