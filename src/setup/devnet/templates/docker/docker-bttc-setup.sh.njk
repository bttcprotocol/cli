#!/usr/bin/env sh

set -x #echo on

for i in {0..{{ obj.totalNodes - 1 }}}
do
  NODE_DIR=/root/.bttc
  DATA_DIR=/root/.bttc/data
  docker-compose run --rm bttc$i sh -c "
bttc --datadir $DATA_DIR init $NODE_DIR/genesis.json; 
cp $NODE_DIR/nodekey $DATA_DIR/bttc/;
cp $NODE_DIR/static-nodes.json $DATA_DIR/bttc/;
"
done

echo "Setup done!"