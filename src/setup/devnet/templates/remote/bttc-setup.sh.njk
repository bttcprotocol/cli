#!/usr/bin/env sh

NODE_DIR=/data2/bttc/node
BTTC_HOME=$NODE_DIR/bttc
LOG_HOME=$NODE_DIR/logs

# create delivery file
mkdir -p $BTTC_HOME $LOG_HOME

# setup bttc
BTTC_DATA_DIR=$BTTC_HOME/data
bttc --datadir $BTTC_DATA_DIR init $BTTC_HOME/genesis.json 

# copy bttc files
cp $BTTC_HOME/nodekey $BTTC_DATA_DIR/bor/
cp $BTTC_HOME/static-nodes.json $BTTC_DATA_DIR/bor/

echo "Setup done!"%